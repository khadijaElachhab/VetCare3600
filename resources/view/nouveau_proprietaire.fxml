<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="/css/ajouter-proprietaire.css"
            style="-fx-background-color: #ffc7d5;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.NouveauProprietaireController">
    <center>
        <StackPane>
            <children>
                <VBox alignment="CENTER" maxWidth="600.0" styleClass="form-card">
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>
                    <children>
                        <Label alignment="CENTER" styleClass="form-title" text="Ajouter un Propriétaire" />

                        <VBox spacing="15.0">
                            <VBox spacing="5.0">
                                <Label text="Prénom :" />
                                <TextField fx:id="champPrenom" promptText="Prénom" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Nom :" />
                                <TextField fx:id="champNom" promptText="Nom" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Email :" />
                                <TextField fx:id="champEmail" promptText="Email" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Téléphone :" />
                                <TextField fx:id="champTelephone" promptText="Téléphone" />
                            </VBox>

                            <HBox alignment="CENTER" spacing="100.0">
                                <padding>
                                    <Insets top="20.0" />
                                </padding>
                                <children>
                                    <Button onAction="#retour" text="Retour" />
                                    <Button onAction="#ajouter" text="Ajouter" />
                                </children>
                            </HBox>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </StackPane>
    </center>
</BorderPane>